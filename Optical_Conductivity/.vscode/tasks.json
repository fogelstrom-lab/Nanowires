{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make-debug",
      "type": "shell",
      "command": "make DEBUG=1 -j8",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "make-release",
      "type": "shell",
      "command": "make -j8",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "run-mpi-4",
      "type": "shell",
      "command": "mpirun -np 4 ./nanowire_solver",
      "group": "test"
    }
  ]
}
